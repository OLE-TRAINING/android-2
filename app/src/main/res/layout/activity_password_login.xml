<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backroundLogin"
    android:orientation="vertical"
    >

 <com.example.android.movieapp.Sign_in_error
     android:id="@+id/viewPasswordLogin"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"></com.example.android.movieapp.Sign_in_error>

    <TextView
        android:id="@+id/textPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_dimens_marginLR"
        android:layout_marginTop="@dimen/marginTopLogin"
        android:fontFamily="monospace"
        android:text="@string/text_password_login"
        android:textColor="@color/titlecolor"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/titlecolor"
        android:layout_marginStart="12dp"
        android:layout_marginTop="116dp"
        android:text="@string/email_test"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordLogin" />

    <EditText
        android:id="@+id/passwordEditPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_bottom_border"
        android:hint="@string/password_hint"
        android:textColor="@color/titlecolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/small_dimens_marginLR"
        android:text="@string/password_forgot"
        android:textColor="@color/titlecolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditPassword" />

    <Button
        android:id="@+id/buttonPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_dimens_marginLR"
        android:layout_marginEnd="@dimen/small_dimens_marginLR"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/light_blue"
        android:text="@string/log_in"
        android:onClick="buttonPasswordLogin"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>