<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#f5f6f7"
    tools:context=".homeScreen.MovieDetailActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="4dp"
        android:theme="@style/HomeBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:src="@drawable/ic_back_detail_movie"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleActionBar_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="OLA"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/banner_movie_detail"
        android:layout_below="@+id/my_toolbar_movie_detail"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        />

    <android.support.v7.widget.CardView
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/banner_movie_detail">

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/poster_movie_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar_movie_detail"
        android:elevation="3dp"
        app:srcCompat="@drawable/banner_movie" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_movie_detail"
        android:layout_toRightOf="@+id/poster_movie_detail"
        android:layout_marginLeft="8dp"
        android:elevation="3dp"
        >

        <TextView
            android:id="@+id/title_movie_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Império - Resistên..."/>

        <TextView
            android:id="@+id/genres_movie_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action, Adventure, Fantasy"

            app:layout_constraintTop_toBottomOf="@+id/title_movie_detail" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/average_movie_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/genres_movie_detail"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo_size_select_actual_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,9"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/10"/>

        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.constraint.ConstraintLayout>


</RelativeLayout>